{% for entity in entities %}
    <tr>
        <td class="oculto"><a href="{{ path('comentarios_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.usuarioCreo }}</td>
        <td>{% if entity.fechaCreacion %}{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>{{ entity.comentario }}</td>
        <td>
               
            <a href="{{ path('comentarios_show', { 'id': entity.id }) }}" class="btn yellow btn-outline">Ver</a>
        
            <a href="{{ path('comentarios_edit', { 'id': entity.id }) }}" class="btn blue btn-outline">Editar</a>
            
        </td>
    </tr>
{% endfor %}