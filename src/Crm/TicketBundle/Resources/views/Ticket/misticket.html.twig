    <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1_2">
                        <thead>
                            <tr>
                                <th class="oculto">Id</th>
                                <th class="tam"></th>
                                <th>Solicitante</th>
                                <th>Contenido</th>
                                <th>Prioridad</th>
                                <th class="tamFe">Fecha</th>
                                <th class="tamAc">Aciones</th>
                            </tr>
                        </thead>
                       <tbody>
                        {% for entity in entities %}

                            <tr>
                                <td class="oculto">{{ entity.id }}</td>
                                <td><i class="font-blue icon-bubbles"></i></td>
                                <td>{{entity.solicitante}}</td>
                                <td>{{entity.contenido}}</td>
                                <td>{% if entity.prioridad >= 1 and entity.prioridad <= 4 %}
                                        <span class="label label-sm label-success"> Baja </span>
                                    {% elseif   entity.prioridad >= 5 and entity.prioridad  <= 7 %}
                                        <span class="label label-sm label-warning"> Media </span>
                                    {% else %}
                                        <span class="label label-sm label-danger"> Alta </span>
                                    {% endif %}
                                </td>
                                <td>{{ entity.fechaCreacion|date('Y-m-d H:i') }}</td>
                                <td><div class="mt-action-buttons ">
                                        <div class="btn-group btn-group-circle">
                                            <a href="{{ path('vista_ticket', { 'id': entity.id }) }}" class="btn btn-outline yellow btn-sm">Ver</a> 
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        {% endfor %}
                       </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>