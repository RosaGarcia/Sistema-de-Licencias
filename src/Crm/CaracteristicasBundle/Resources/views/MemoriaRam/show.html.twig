 {% extends '::frontend.html.twig' %}

{% block body -%}
    
    <div class="row">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2><a href="{{ path('memoriaram') }}">
                Mamoria Ram:
                </a>
                Vista 
            </h2>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-eye font-yellow"></i>
                        <span class="caption-subject font-yellow bold uppercase">Caracteristicas</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="general-item-list">
                        
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Marca:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.marca }}
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Modelo:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.modelo }}
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Capacidad:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.capacidad }} {{ entity.unidad }}
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Tipo:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.tipo }}
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Termino Memoria:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.terminoMemoria }}
                                </div>
                            </div>
                        </div><br />

                        {{ form(delete_form) }}
                       
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
