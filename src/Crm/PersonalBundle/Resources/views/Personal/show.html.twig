                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Estado:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.estado }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Municipio:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.municipio }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Localidad:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.localidad }}
                                    </div>
                                </div>
                            </div>

                        {% endfor %}
                        <br />
                            {{ form(delete_form) }}
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
