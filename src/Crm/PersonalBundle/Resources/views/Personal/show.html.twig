{% extends '::frontend.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <h2><a href="{{ path('personal') }}">
                   Personal:
                </a>
                   Vista   
            </h2>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %} 
    
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit ">   
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-eye font-yellow"></i>
                        <span class="caption-subject font-yellow bold uppercase">Caracteristicas</span>
                    </div>
                </div>

                 <div class="portlet-body">
                    <div class="general-item-list">

                        {% for entity in entities %}
                        
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Nombre:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.nombre }}
                                    </div>
                                </div>
                            </div>
                             <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Apellido Paterno:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.apePat }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Apellido Materno:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.apemat }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Telefono:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.telefono }}
                                    </div>
                                    <div class="col-xs-12 col-sm-2 col-md-1">
                                        Celular:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.celular }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Email:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.email }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Estatus:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.estatus }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Empresa:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.empresa }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Puesto:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.personal.puesto }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Calle:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.calle }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
