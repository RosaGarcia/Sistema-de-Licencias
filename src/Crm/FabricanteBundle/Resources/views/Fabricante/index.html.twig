{% extends '::frontend.html.twig' %}

{% block body -%}

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %}

    {% block form -%}
        {{ render(controller('FabricanteBundle:DireccionFabricante:new')) }}
    {% endblock -%}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase"> Lista Fabricante</span>
                    </div>
                </div>   

                 <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_2">
                        <thead>
                            <tr>
                                <th class="oculto">Id</th>
                                <th>Razon Social</th>
                                <th>RFC</th>
                                <th>Telefono</th>
                                <th>Ext</th>
                                <th>Telefono</th>
                                <th>Ext</th>
                                <th>Email</th>
                                <th>Pagina Web</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        {% block lista -%}
                            {{ render(controller('FabricanteBundle:Fabricante:listado')) }}
                        {% endblock -%}
                    </table>
                </div>
            </div>
        </div>
    </div> 
{% endblock %}
