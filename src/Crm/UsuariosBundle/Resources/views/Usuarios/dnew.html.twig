{% extends '::frontend.html.twig' %}
{% block body %}

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <h2>
                Usuarios
            </h2>
        </div>  
    </div>  

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet light ">
                <div class="portlet-title tabbable-line">
                    <div class="caption">
                        <i class="fa fa-database font-green-sharp"></i>
                        <span class="caption-subject font-green-sharp bold uppercase">Nuevo Usuario</span>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" class="active" data-toggle="tab">Usuarios</a>
                        </li>
                    </ul>
                </div>
                {{ form_start(form, { 'attr' : {'novalidate': 'novalidate'} }) }}
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active">
                                <div class="scroller" data-always-visible="1" data-rail-visible="0">
                                  

                                        <div class="col-md-12">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.userName,{'attr': {'placeholder': 'Nombre de usuario'}}) }}
                                                    <span class="help-block help-block-error">{{ form_errors(form.userName) }}</span>
                                                    <label for="userName">Nombre</label>
                                                    <i class="fa fa-user"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <br />
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.password.first,{'attr': {'class':'form-control','placeholder': 'Password'},'required':'true'}) }}
                                                    <label for="passwordfirst">Password</label>
                                                    <i class="fa fa-lock"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.password.second,{'attr': {'class':'form-control','placeholder': 'Confirmar password'},'required':'true'}) }}
                                                    <label for="passwordsecond">Confirmar password</label>
                                                    <i class="fa fa-unlock"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.personal,{'attr': {'class':'form-control'},'required':'true'}) }}
                                                    <label for="personal">Personal</label>
                                                    <i class="fa fa-sort-down"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.rol,{'attr': {'class':'form-control'},'required':'true'}) }}
                                                    <label for="rol">Rol</label>
                                                    <i class="fa fa-sort-down"></i>
                                                </div>
                                            </div>
                                        </div>
                        
                                    
                {{ form_widget(form._token) }}  
                             
                                    <div class="col-xs-12"><br /><br />
                                        <button class="btn btn-success" type="submit" id="sendform"><i class="fa fa-plus"></i>&nbsp;Crear</button>
                                    </div>
                              
                                    </form>     
                                </div>
                            </div>
                                                
                        </div>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}