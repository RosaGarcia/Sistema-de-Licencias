<div class="row">
    <div class="col-xs-12 col-sm-12 com-md-12">
        <h2>
            Producto
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="portlet light ">
            <div class="portlet-title tabbable-line">
                <div class="caption">
                    <i class="fa fa-database font-green-sharp"></i>
                    <span class="caption-subject font-green-sharp bold uppercase">Nuevo Producto</span>
                </div>
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a class="active" data-toggle="tab"> Producto </a>
                    </li>
                </ul>
            </div>
            {{ form_start(form) }}
                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="scroller" data-always-visible="1" data-rail-visible="0">
                                <ul class="feeds">

                                    <div class="col-md-6">
                                        <div class="form-group form-md-line-input has-success">
                                            <div class="input-icon">
                                                {{ form_widget(form.nombre,{'attr': {'placeholder': 'Nombre'}}) }}
                                                <label for="nombre">Nombre</label>
                                                <i class="fa fa-pencil"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-md-line-input has-success">
                                            <div class="input-icon">
                                                {{ form_widget(form.termino,{'attr': {'placeholder': 'Termino'}}) }}
                                                <label for="termino">Termino</label>
                                                <i class="fa fa-pencil"></i>
                                            </div>
                                        </div>
                                    </div>

                                </ul>
            {{ form_widget(form._token) }}  
                         
                                <div class="col-xs-12">
                                    <button class="btn btn-success" type="submit" id="sendform"><i class="fa fa-plus"></i>&nbsp;Crear</button>
                                </div>
                          
                                </form>        
                            </div>
                        </div>                      

             
                                            
                    </div>
                </div>
        </div>
    </div>
</div>
