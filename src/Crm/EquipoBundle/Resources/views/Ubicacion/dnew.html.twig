{% extends '::frontend.html.twig' %}
{% block body %}
    
    <div class="row">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2>
                Instalación:
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="portlet light ">
                <div class="portlet-title tabbable-line">
                    <div class="caption">
                        <i class="fa fa-database font-green-sharp"></i>
                        <span class="caption-subject font-green-sharp bold uppercase">Nuevo Instalación</span>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#tab_1_1" class="active" data-toggle="tab"> Instalación </a>
                        </li>
                    </ul>
                </div>
                {{ form_start(form, { 'attr' : {'novalidate': 'novalidate'} }) }}
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active">
                                <div class="scroller" data-always-visible="1" data-rail-visible="0">
                                    

                                        <div class="col-md-6">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.equipo,{"attr":{"class":"form-control"},"required":"true"}) }}
                                                    <label for="equipo">Equipo</label>
                                                    <i class="fa fa-sort-down"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.calle) }}
                                                    <span class="help-block help-block-error">{{ form_errors(form.calle) }}</span>
                                                    <label for="calle">Calle</label>
                                                    <i class="fa fa-road"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.numeroExt) }}
                                                    <span class="help-block help-block-error">{{ form_errors(form.numeroExt) }}</span>
                                                    <label for="numeroExt">Numero Exterior</label>
                                                    <i class="fa fa-pencil"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.numeroInt) }}
                                                    <label for="numeroInt">Numero Interior</label>
                                                    <i class="fa fa-pencil"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.codigoPostal) }}
                                                    <span class="help-block help-block-error">{{ form_errors(form.codigoPostal) }}</span>
                                                    <label for="codigoPostal">Codigo Postal</label>
                                                    <i class="fa fa-pencil"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <br />
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.colonia) }}
                                                    <span class="help-block help-block-error">{{ form_errors(form.colonia) }}</span>
                                                    <label for="colonia">Colonia</label>
                                                    <i class="fa fa-pencil"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.localidad) }}
                                                    <span class="help-block help-block-error">{{ form_errors(form.localidad) }}</span>
                                                    <label for="localidad">Localidad</label>
                                                    <i class="fa fa-pencil"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.estatus) }}
                                                    <label for="estatus">Estatus</label>
                                                    <i class="fa fa-sort-down"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <br />
                                        </div>
                                        <div class="oculto" id="instalado">
                                             <div class="col-md-4" >
                                                <div class="form-group form-md-line-input has-success">
                                                    <div class="input-icon">
                                                        {{ form_widget(form.ip) }}
                                                        <label for="ip">Ip</label>
                                                        <i class="fa fa-pencil"></i>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group form-md-line-input has-success">
                                                    <div class="input-icon">
                                                        {{ form_widget(form.dominio) }}
                                                        <label for="dominio">Dominio</label>
                                                        <i class="fa fa-pencil"></i>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.pais,{"attr":{"class":"form-control"},"required":"true"}) }}
                                                    <label for="pais">Pais</label>
                                                    <i class="fa fa-sort-down"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.estado,{"attr":{"class":"form-control"},"required":"true"}) }}
                                                    <label for="estado">Estado</label>
                                                    <i class="fa fa-sort-down"></i>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group form-md-line-input has-success">
                                                <div class="input-icon">
                                                    {{ form_widget(form.municipio,{"attr":{"class":"form-control"},"required":"true"}) }}
                                                    <label for="municipio">Municipio</label>
                                                    <i class="fa fa-sort-down"></i>
                                                </div>
                                            </div>
                                        </div>


                {{ form_widget(form._token) }}  
                             
                                    <div class="col-xs-12"><br /><br />
                                        <button class="btn btn-success" type="submit" id="sendform"><i class="fa fa-plus"></i>&nbsp;Crear</button>
                                    </div>
                              
                                    </form>     
                                </div>
                            </div>
                                                
                        </div>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script>
    jQuery('#crm_equipobundle_ubicacion_estatus').on('change', function() {
        if (this.value != "Instalado"){
            jQuery('#instalado').addClass("oculto");
        }
        else{
            jQuery("#instalado").removeClass("oculto");
        }
        });   
</script>
{% endblock javascripts %}