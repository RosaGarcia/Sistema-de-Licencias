{% extends '::frontend.html.twig' %}

{% block body -%}

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %}

    {% block form -%}
        {{ render (controller('EquipoBundle:Ubicacion:new')) }}
    {% endblock %}

   <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                            <span class="caption-subject bold uppercase"> Lista Instalaci√≥n</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_2">
                        <thead>
                            <tr>
                                <th class="oculto">Id</th>
                                <th>Calle</th>
                                <th>Numero Ext</th>
                                <th>Numero Int</th>
                                <th>Colonia</th>
                                <th>Codigo Postal</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        {% block lista -%}
                            {{ render (controller('EquipoBundle:Ubicacion:listado')) }}
                        {% endblock %}
                    </table>
                </div>
            </div>
        </div>
    </div>

      
{% endblock %}


{% block javascripts %}
<script>
    jQuery('#crm_equipobundle_ubicacion_estatus').on('change', function() {
        if (this.value != "Instalado"){
            jQuery('#instalado').addClass("oculto");
        }
        else{
            jQuery("#instalado").removeClass("oculto");
        }
        });   
</script>
{% endblock javascripts %}