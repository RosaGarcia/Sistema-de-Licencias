{% extends '::frontend.html.twig' %}

{% block body -%}
   
   <div class="row">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2><a href="{{ path('caracteristicasequipo') }}">
                Caracteristicas Equipo:
                </a>
                Vista 
            </h2>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-eye font-yellow"></i>
                        <span class="caption-subject font-yellow bold uppercase">Caracteristicas</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="general-item-list">

                        <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Equipo:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.equipo }}
                                    </div>
                                </div>
                            </div>
                             <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Interfaces:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.interfaz }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Numero de USB:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.usb }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Expansi√≥n:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        <input type="checkbox" {% if  entity.expansion == 1 %} checked="checked" {% endif %}/>
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Procesador:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.procesador }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Capacidad:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.capacidad }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Memoria Ram:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.memoriaRam }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Disco Duro:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.discoDuro }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Software:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.software }}
                                    </div>
                                </div>
                            </div>
                            <div class="item">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Dimensiones:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ entity.dimensiones }}
                                    </div>
                                </div>
                            </div><br />

                        {{ form(delete_form) }}
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
        
{% endblock %}
