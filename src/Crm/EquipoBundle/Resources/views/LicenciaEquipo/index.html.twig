{% extends '::frontend.html.twig' %}

{% block body -%}


    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %}

    {% block form %}
        {{ render (controller('EquipoBundle:LicenciaEquipo:new')) }}
    {% endblock %}

   <div class="row">
        <div class="col-md-12">
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase"> Lista Licencia Equipo</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="btn-group">
                                    <a href="{{ path('licenciaequipo_new') }}" class="btn green btn-outline">
                                        Crear nueva licencia equipo
                                    </a>  
                                </div>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_2">                       
                        <thead>
                            <tr>
                                <th class="oculto">Id</th>
                                <th>Equipo</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Final</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        {% block lista -%}
                            {{ render (controller('EquipoBundle:LicenciaEquipo:listado')) }}
                        {% endblock %}
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
