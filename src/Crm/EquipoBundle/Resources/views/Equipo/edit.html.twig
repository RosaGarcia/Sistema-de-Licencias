{% extends '::frontend.html.twig' %}

{% block body -%}
    
    <div class="row">
       	<div class="col-xs-12 col-sm-12 com-md-12">
        	<h2><a href="{{ path('equipo') }}">
            		Equipo :
            	</a>
         		Editar
        	</h2>
    	</div>
	</div>

	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12">
	        <div class="portlet light tasks-widget ">
	            <div class="portlet-title">
	                <div class="caption">
	                	<i class="icon-pencil font-green"></i>
	                    <span class="caption-subject font-green bold uppercase">Editar Equipo</span>
	                </div>
	            </div>
	            <div class="portlet-body">
	                <div class="task-content">

	    				{{ form_start(edit_form) }}

	    				 	<div class="form-group">
	    						<div class="row">
	    							<div class="col-xs-12 col-sm-2 col-md-2">
	                    				Modelo Equipo:
	                    			</div>
	                    			<div class="col-xs-12 col-sm-3 col-md-3">
	                    				{{ form_widget(edit_form.modeloEquipo,{"attr":{"class":"form-control"}}) }}
	                    			</div>
	                			</div>
	            			</div>

	            			<div class="form-group">
	    						<div class="row">
	    							<div class="col-xs-12 col-sm-2 col-md-2">
	                    				Fabricante:
	                    			</div>
	                    			<div class="col-xs-12 col-sm-3 col-md-3">
	                    				{{ form_widget(edit_form.fabricante,{"attr":{"class":"form-control"}}) }}
	                    			</div>
	                			</div>
	            			</div>

	    				 	<div class="form-group">
	    						<div class="row">
	    							<div class="col-xs-12 col-sm-2 col-md-2">
	                    				Serie Fabricante:
	                    			</div>
	                    			<div class="col-xs-12 col-sm-3 col-md-3">
	                    				{{ form_widget(edit_form.serieFabricante) }}
	                    			</div>
	                			</div>
	            			</div>

	            			<div class="form-group">
	    						<div class="row">
	    							<div class="col-xs-12 col-sm-2 col-md-2">
	                    				Serie Warriors:
	                    			</div>
	                    			<div class="col-xs-12 col-sm-3 col-md-3">
	                    				{{ form_widget(edit_form.serieWarriors) }}
	                    			</div>
	                			</div>
	            			</div>

	            			<div class="form-group">
	            				<div class="row">
                                    <label class="control-label col-md-2">
                                    	Fecha Llegada:
                                    </label>
                                    <div class="col-md-3">
                                        {{ form_widget(edit_form.fechaLlegada,{"attr":{"class":"form-control"},"required":"true"}) }}
                                                     
                                        <span class="help-block"> Select date </span>
                                    </div>
                                </div>
                            </div>                          
            			

						{{ form_end(edit_form) }}
					</div>
	        	</div>
	    	</div>
		</div>
	</div>
   
{% endblock %}
