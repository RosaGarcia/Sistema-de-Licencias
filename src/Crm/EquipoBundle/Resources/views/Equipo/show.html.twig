{% extends '::frontend.html.twig' %}

{% block body -%}
   
   <div class="row">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2><a href="{{ path('equipo') }}">
                Equipo:
                </a>
                Vista 
            </h2>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-eye font-yellow"></i>
                        <span class="caption-subject font-yellow bold uppercase">Caracteristicas</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="general-item-list">

                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Modelo:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.modeloEquipo }}
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Fabricante:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.fabricante }} 
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Serie Fabricante:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.serieFabricante }}
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Serie Warriors:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.serieWarriors }}
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="row">
                                <div class="col-xs-12 col-sm-2 col-md-2">
                                    Llegada:
                                </div>
                                <div class="col-xs-12 col-sm-3 col-md-3">
                                    {{ entity.fechaLlegada|date('Y-m-d') }}
                                </div>
                            </div>
                        </div>                            
                        <br />


                        {{ form(delete_form) }}
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
        
{% endblock %}
